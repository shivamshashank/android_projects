<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/subscriberCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:elevation="12dp"
        app:cardBackgroundColor="@color/teal_200"
        app:cardCornerRadius="12dp">

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            app:alignItems="center"
            app:justifyContent="space_between">

            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:flexDirection="column">

                <TextView
                    android:id="@+id/subscriberName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/subscriber_name"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="24dp" />

                <TextView
                    android:id="@+id/subscriberEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/subscriber_name"
                    android:textSize="20sp"
                    android:textStyle="italic" />

            </com.google.android.flexbox.FlexboxLayout>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/deleteSubscriber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:contentDescription="@string/delete_subscriber"
                android:src="@drawable/ic_baseline_delete_24"
                app:fabSize="mini" />

        </com.google.android.flexbox.FlexboxLayout>

    </androidx.cardview.widget.CardView>

</layout>